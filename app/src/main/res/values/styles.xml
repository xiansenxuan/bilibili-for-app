<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- design样式 -->
    <style name="Theme.Design.Xuan" parent="Base.Theme.Design.Xuan" />

    <style name="Base.Theme.Design.Xuan" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- All customizations that are NOT specific to a particular LiveApi-level can go here. -->
        <item name="android:listDivider">@drawable/base_line</item>

        <!-- menu -->
        <item name="android:textColor">@color/base_black</item><!--浮动菜单字体颜色-->
        <item name="actionMenuTextColor">@color/base_white</item>
        <item name="android:actionMenuTextColor">@color/base_white</item>

        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>

        <item name="android:textAppearance">@android:style/TextAppearance.Medium</item>
        <!-- menu -->

        <!--    系统状态栏透明与app风格颜色一致 -->
        <item name="android:windowTranslucentStatus" >true</item>
        <!--<item name="android:windowTranslucentNavigation" >true</item>-->

        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds" tools:ignore="NewApi">true</item>
        <item name="android:statusBarColor" tools:ignore="NewApi">@color/base_transparent</item>
        <!-- 在系统状态栏下面 -->
        <!--        <item name="android:fitsSystemWindows">true</item>-->
        <!-- App bar 上的标题与更多菜单中的文字颜色。 -->
        <item name="android:textColorPrimary">@color/base_black</item>
        <!-- Actionbar 的背景色设定在 style 中的 colorPrimary -->
        <item name="colorPrimary">@color/base_pink</item>
        <!-- 状态栏背景色 -->
        <item name="colorPrimaryDark">@color/base_pink</item>
        <!--<item name="navigationBarColor">@color/base_pink</item> 底部导航栏底色 -->
        <!-- 导航栏的背景色，但只能用在 API Level 21 (Android 5) 以上的版本 -->
        <item name="android:navigationBarColor" tools:ignore="NewApi">@color/base_pink</item>
        <!-- 各控制元件(如：check box、switch 或是 radoi) 被勾选 (checked) 或是选定 (selected) 的颜色 -->
        <item name="colorAccent">@color/base_pink</item>
        <!-- 各控制元件的预设颜色 -->
        <item name="colorControlNormal">@color/base_black</item>
        <!-- App 的背景色 -->
        <item name="android:windowBackground">@color/window_background</item>



    </style>
    <!-- design样式 -->


    <!-- toolbar样式 -->
    <style name="ToolBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="titleTextColor">@color/base_white</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
    </style>
    <!-- toolbar样式 -->
    <!--ToolBar TextSize style-->
    <style name="ToolBar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">16sp</item>
    </style>



    <style name="CollapsingToolbarTitleStyle.About" parent="@android:style/TextAppearance">
        <item name="android:textColor">@android:color/transparent</item>
    </style>



    <style name="MaterialSearchViewStyle">
        <!-- Background for the search bar -->
        <item name="searchBackground">@color/base_white</item>

        <!--&lt;!&ndash; Change voice icon &ndash;&gt;-->
        <!--<item name="searchVoiceIcon">@drawable/ic_action_voice_search_inverted</item>-->

        <!--&lt;!&ndash; Change clear text icon &ndash;&gt;-->
        <!--<item name="searchCloseIcon">@drawable/ic_action_navigation_close_inverted</item>-->

        <!--&lt;!&ndash; Change up icon &ndash;&gt;-->
        <!--<item name="searchBackIcon">@drawable/ic_action_navigation_arrow_back_inverted</item>-->

        <!-- Change icon for the suggestions -->
        <item name="searchSuggestionIcon">@drawable/ic_suggestion</item>

        <!-- Change background for the suggestions list view -->
        <item name="searchSuggestionBackground">@color/base_white</item>

        <!-- Change text color for edit text. This will also be the color of the cursor -->
        <item name="android:textColor">@color/base_black</item>

        <!-- Change hint text color for edit text -->
        <item name="android:textColorHint">@color/base_black</item>

        <!-- Hint for edit text -->
        <item name="android:hint">@string/search_hint</item>
    </style>

</resources>
