<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
       xmlns:app="http://schemas.android.com/apk/res-auto">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_margin="10dp"
        app:cardBackgroundColor="@color/base_white"
        app:cardCornerRadius="4dp"
        app:cardElevation="2dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_tips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:padding="10dp"
                android:src="@drawable/ic_pay_bangumi_tips"/>


            <TextView
                android:id="@+id/tv_please"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_toEndOf="@+id/iv_tips"
                android:paddingTop="5dp"
                android:text="请承包我吧"
                android:textColor="@color/base_yellow"
                android:textSize="16sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_please"
                android:layout_toEndOf="@+id/iv_tips"
                android:text="已有383人承包了这部剧"
                android:textColor="@color/base_yellow"
                android:textSize="12sp"/>


            <TextView
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/bg_circle_solid_yellow"
                android:gravity="center"
                android:text="承包"
                android:textColor="@color/base_white"
                android:textSize="14sp"/>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/iv_tips"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="5dp"
                android:background="@color/base_white_line"/>


            <FrameLayout
                android:id="@+id/fl_header"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="10dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center|start"
                    android:src="@drawable/header_default"
                    />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center|start"
                    android:layout_marginStart="15dp"
                    android:src="@drawable/header_default"
                    />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center|start"
                    android:layout_marginStart="30dp"
                    android:src="@drawable/header_default"
                    />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center|start"
                    android:layout_marginStart="45dp"
                    android:src="@drawable/header_default"
                    />

            </FrameLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="5dp"
                android:layout_toEndOf="@+id/fl_header"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="等34人承包了这部番"
                android:textColor="@color/light_black_text"
                android:textSize="12sp"/>


            <TextView
                android:layout_width="70dp"
                android:layout_height="25dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_margin="10dp"
                android:gravity="center"
                android:text="查看榜单"
                android:textColor="@color/base_yellow"
                android:textSize="12sp"/>

        </RelativeLayout>


    </android.support.v7.widget.CardView>

</merge>